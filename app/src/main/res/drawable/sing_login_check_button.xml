<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <layer-list>
            <!-- main_singer_frame (밑으로) : 그림자 -->
            <item android:top="2dp">
                <shape>
                    <corners android:radius="12dp" />
                    <solid android:color="#898989" />
                </shape>
            </item>
            <!-- background (위로) -->
            <item android:bottom="2dp" android:top="4dp" android:left="2dp" android:right="2dp">
                <shape>
                    <corners android:radius="12dp" />
                    <gradient
                        android:startColor="#ffcd54"
                        android:endColor="#ffb65d"
                        android:angle="270"/>
                    <stroke android:width="1dp" android:color="#898989" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
