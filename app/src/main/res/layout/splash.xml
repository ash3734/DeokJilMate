            android:layout_width="104dp"
            android:layout_height="104dp"
            android:background="@drawable/splash_logo"
            android:layout_above="@+id/Splash_centerView"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
</LinearLayout>
