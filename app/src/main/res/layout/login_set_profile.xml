<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_set_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.deokjilmate.www.deokjilmate.Login.SetProfileActivity"
    android:orientation="vertical"
    android:background="@drawable/maingradation">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@color/tw__solid_white"
        android:alpha="0.3">
        <ImageButton
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_marginLeft="16dp"
            android:background="@color/tw__transparent"
            android:id="@+id/SetProfile_backImage"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="프로필 설정"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/mypagemain_background_ImageView_Id" />


        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="151dp"
            android:layout_height="151dp"
            android:layout_marginTop="100dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/SetProfile_profileImage"
            android:src="@drawable/profile_default"
            app:civ_border="true"
            app:civ_border_color="#ff7d8f"
            />


        <ImageButton
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/SetProfile_select"
            android:layout_alignParentRight="true"
            android:background="@drawable/profilesetting_photo"
            android:layout_marginTop="216dp"
            android:layout_marginRight="102dp"
            />

        <LinearLayout
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@drawable/border_circle_background"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/SetProfile_profileImage"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="30dp" />
            <EditText
                android:layout_width="125dp"
                android:layout_height="match_parent"
                android:hint="닉네임"
                android:textSize="15dp"
                android:textColorHint="#9d9e9e"
                android:id="@+id/nickname"
                android:gravity="center"
                android:background="@null"/>

        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:text="다음 단계로"
            android:id="@+id/SetProfile_next"/>
    </RelativeLayout>

</LinearLayout>
